{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@lumo/infrastructure/*": ["libs/infrastructure/src/*"],
      "@lumo/domain/*": ["libs/domain/src/*"],
      "@lumo/data/*": ["libs/data/src/*"],
      "@lumo/core/*": ["libs/core/src/*"]
    }
  }
}
